<div class="secret-display">
  <div class="directions">{{{directions}}}</div>
  <ul>
  {{#each secretdata}}
   <li>{{name}} : <span class="details"> {{details}} </span> - 
    <div class="modal-delete-trigger">
     <span> delete</span>
      <div class="modal-delete-form" >
        <form action="/form/{{_id}}" method="post" >
          <div>Are you sure you want to delete "<em>{{name}}</em>"?</div>
          <input type="hidden" name="_method" value="DELETE" >
          <button type="submit" >Delete</button>
        </form>
      </div>
    </div> 
  </li>
  {{/each}}
  </ul>
</div>
<div class="secret-form">
  <form action="/form" method="post">
      <div>
          <label for="name">Name:</label>
          <input type="text" id="name" name="name">
      </div>
      <div>
          <label for="details">Details</label>
          <input type="text" id="details" name="details">
      </div>
      <div class="button">
        <button type="submit">Save your secret message</button>
      </div>
  </form>
</div>